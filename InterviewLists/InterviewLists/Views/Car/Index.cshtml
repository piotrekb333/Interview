@using InterviewLists.Application.Models.MakeCar;
@using InterviewLists.Application.Models.WebServices;

@{
    ViewData["Title"] = "Index";
    var makes = ViewData["CarMakes"] as IEnumerable<CarMakeDto>;
    var countries = ViewData["Countries"] as IEnumerable<CountriesModel>;

}
<script src="~/js/car.js"></script>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Manage <b>Cars</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Car</span></a>
                </div>
            </div>
        </div>
        <div id="table-result">

        </div>
    </div>
</div>
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="add-car-form">
                <div class="modal-header">
                    <h4 class="modal-title">Add Car</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Price</label>
                        <input id="CarPrice" name="CarPrice" type="number" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input id="CarDate" name="CarDate" type="text" class="form-control date" required>
                    </div>
                    <div class="form-group">
                        <label>Make</label>
                        <select id="CarMake" name="CarMake" class="form-control" required>
                            <option value=""></option>

                            @foreach (var item in makes)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Model</label>
                        <select id="CarModel" name="CarModel" class="form-control" required></select>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select id="CarCountry" name="CarCountry" class="form-control" required>
                            <option value=""></option>
                            @foreach (var item in countries)
                            {
                                <option value="@item.Name">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="button" id="btn-add-car" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>



<div id="editCarModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="edit-car-form">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Car</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Price</label>
                        <input id="EditCarPrice" name="EditCarPrice" type="number" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input id="EditCarDate" name="EditCarDate" type="text" class="form-control date" required>
                    </div>
                    <div class="form-group">
                        <label>Make</label>
                        <select id="EditCarMake" name="EditCarMake" class="form-control" required>
                            <option value=""></option>

                            @foreach (var item in makes)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Model</label>
                        <select id="EditCarModel" name="EditCarModel" class="form-control" required></select>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select id="EditCarCountry" name="EditCarCountry" class="form-control" required>
                            <option value=""></option>
                            @foreach (var item in countries)
                            {
                                <option value="@item.Name">@item.Name</option>
                            }
                        </select>
                    </div>
                    <input id="EditCarId" type="hidden" class="form-control">

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input id="btn-update-car" type="button" class="btn btn-success" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>

<script>

</script>