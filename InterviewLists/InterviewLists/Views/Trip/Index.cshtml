@using InterviewLists.Application.Models.WebServices;

@{
    ViewData["Title"] = "Index";
    var countries = ViewData["Countries"] as IEnumerable<CountriesModel>;

}
<script src="~/js/trip.js"></script>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Manage <b>Trips</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Trip</span></a>
                </div>
            </div>
        </div>
        <div id="table-result">

        </div>
    </div>
</div>
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add Trip</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Price</label>
                        <input id="TripPrice" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Date From</label>
                        <input id="TripDateFrom" type="text" class="form-control date">
                    </div>
                    <div class="form-group">
                        <label>Date To</label>
                        <input id="TripDateTo" type="text" class="form-control date">
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select id="TripCountry" class="form-control">
                            <option value=""></option>
                            @foreach (var item in countries)
                            {
                                <option value="@item.Name">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="button" id="btn-add-trip" class="btn btn-success" value="Add">
                </div>
            </form>
        </div>
    </div>
</div>



<div id="editTripModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Edit Trip</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Price</label>
                        <input id="EditTripPrice" type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Date From</label>
                        <input id="EditTripDateFrom" type="text" class="form-control date">
                    </div>
                    <div class="form-group">
                        <label>Date To</label>
                        <input id="EditTripDateTo" type="text" class="form-control date">
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select id="EditTripCountry" class="form-control">
                            <option value=""></option>
                            @foreach (var item in countries)
                            {
                                <option value="@item.Name">@item.Name</option>
                            }
                        </select>
                    </div>
                    <input id="EditTripId" type="hidden" class="form-control">

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input id="btn-update-trip" type="button" class="btn btn-success" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>
